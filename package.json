{
  "name": "imageguess",
  "version": "1.0.0",
  "description": "An image guessing game with overlay buttons",
  "main": "src/js/main.js",
  "homepage": "https://github.com/DrabekDigital/imageguess",
  "author": {
    "name": "Jan Drabek",
    "email": "notify@drabek.digital"
  },
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "start:prod": "NODE_ENV=production electron .",
    "build": "NODE_ENV=production electron-builder",
    "build:mac": "NODE_ENV=production electron-builder --mac",
    "build:win": "NODE_ENV=production electron-builder --win",
    "build:linux": "NODE_ENV=production electron-builder --linux",
    "build:dev": "NODE_ENV=development electron-builder",
    "build:dev:win": "NODE_ENV=development electron-builder --win",
    "build:dev:linux": "NODE_ENV=development electron-builder --linux",
    "clean": "rm -rf dist",
    "eslint": "eslint src/**/*.js"
  },
  "keywords": [
    "electron",
    "game",
    "image"
  ],
  "license": "ISC",
  "devDependencies": {
    "electron": "^36.0.0",
    "electron-builder": "^24.9.1",
    "electron-builder-sandbox-fix": "^1.1.0",
    "eslint": "^8.56.0"
  },
  "build": {
    "appId": "digital.drabek.imageguess",
    "productName": "ImageGuess",
    "files": [
      "src/**/*",
      "index.html",
      "package.json"
    ],
    "asar": true,
    "compression": "maximum",
    "removePackageScripts": true,
    "removePackageKeywords": true,
    "afterPack": "electron-builder-sandbox-fix",
    "mac": {
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "hardenedRuntime": true,
      "icon": "icons/macos/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "icons/windows/icon.ico",
      "target": [
        {
          "target": "portable",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "icons/windows/256.png",
      "maintainer": "Jan Drabek <notify@drabek.digital>",
      "category": "Game",
      "desktop": {
        "MimeType": "x-scheme-handler/imageguess"
      },
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    }
  }
}
