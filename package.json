{
  "name": "imageguess",
  "version": "1.0.0",
  "description": "An image guessing game with overlay buttons",
  "main": "src/js/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "start:prod": "NODE_ENV=production electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "clean": "rm -rf dist",
    "eslint": "eslint src/**/*.js"
  },
  "keywords": [
    "electron",
    "game",
    "image"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^36.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0"
  },
  "build": {
    "appId": "digital.drabek.imageguess",
    "files": [
      "src/**/*",
      "index.html",
      "package.json"
    ],
    "mac": {
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "hardenedRuntime": true,
      "icon": "icons/macos/icon.icns"
    },
    "win": {
      "icon": "icons/windows/icon.ico"
    },
    "linux": {
      "icon": "icons/windows/256.png"
    }
  }
}
